<br />

<div class="booyah-box col-xs-10 col-xs-offset-1 text-center">
  <h1>Currently Enrolled Courses</h1>
  <br />
  <% current_user.enrolled_courses.each do |course| %>
  <h3>
    <%= link_to course.title, course_path(course) %>
  </h3>
  <br />
  <%= image_tag course.image, class: 'img-responsive' %>
  <br />
  <div class="col-xs-12 col-sm-8">
    <%= course.description %>
  </div>
  <div class="col-xs-12 col-sm-4 text-center">
    <%= link_to "More Info ...", course_path(course), class: 'btn btn-info btn-lg' %>
  </div>
  <hr class="col-xs-8 col-xs-offset-2">
  <br class="clear" />
  <% end %>

  <h1>Created Courses:</h1>
  <% current_user.courses.each do |course| %>
  <h3 class="text-center">
    <%= link_to course.title, course_path(course) %>
  </h3>
  <br />
  <%= image_tag course.image, class: 'img-responsive' %>
  <br />
  <div class="col-xs-12 col-sm-8">
    <%= course.description %>
  </div>
  <div class="col-xs-12 col-sm-4 text-cnter">
    <%= link_to "More Info ...", course_path(course), class: 'btn btn-info btn-lg' %>
  </div>
  <hr class="col-xs-8 col-xs-offset-2">
  <br class="clear" />
  <% end %>
</div>
